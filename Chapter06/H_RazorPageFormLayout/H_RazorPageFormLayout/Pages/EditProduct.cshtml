@page "{id}"
@model H_RazorPageFormLayout.Pages.EditProductModel
@{
	ViewData["Title"] = "Product";
}

<h1>Edit @Model.Input.Name</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="Input.Name"></label>
		<input class="form-control" asp-for="Input.Name" />
		<span asp-validation-for="Input.Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="Input.Price"></label>
		<input class="form-control" asp-for="Input.Price" />
		<span asp-validation-for="Input.Price"></span>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
