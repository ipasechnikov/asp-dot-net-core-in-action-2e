@page
@model IndexModel
@{
    ViewData["Title"] = "Select currencies";
}

<h1>Select currencies</h1>

<form asp-page="ShowRates" method="post">
    <div class="form-group">
        <select multiple name="currencies" asp-items="Model.Currencies"></select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>